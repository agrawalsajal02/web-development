 <% include partials/header.ejs %>
<div class="ui main text container">
	<div class="ui huge header">RESTfull Blog App	</div>
	<div class="ui top attached segment">
		<div class="ui divided items">


					<% blogs.forEach(function(blog){ %>
					<div class="item">
			<div class="image"><img src="<%=blog.image%>"><br></div>
					<div class="content">
						<a href="/blogs/<%=blog._id%>"><%=blog.title%></a>
						<div class="meta">
							<span><%=blog.created.toDateString()%></span>	</div>
						<div class="description"><p>	<%-blog.body.substring(0,100)%>...</p></div>
					<div class="extra">
					<a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">Read more<i class="right chevron icon"></i></a></div>
				</div> 
		</div>

					<%});%>
 
			
	</div>

</div>
